---
const navItems = [
  { titleEs: 'Sobre Mi', titleEn: 'About Me', href: '/' },
  { 
    titleEs: 'Proyectos', 
    titleEn: 'Projects',
    href: '/projects',
    subitems: [
      { titleEs: 'Desarrollo de Laboratorios de Computación', titleEn: 'Computer Labs Development', href: '/projects/labs' },
      { titleEs: 'Delivery Hero: Plataforma de Pedidos y Entregas', titleEn: 'Delivery Hero: Ordering and Delivery Platform', href: '/projects/delivery-hero' },
      { titleEs: 'RentAway: Plataforma Integrada de Hospedaje y Vehículos', titleEn: 'RentAway: Integrated Platform for Lodging and Vehicles', href: '/projects/rentaway' }
    ]
  },
  { titleEs: 'Educación', titleEn: 'Education', href: '/education' },
];
---

<aside class="bg-indigo-950 text-white w-64 min-h-screen p-4">
  <nav>
    <ul class="space-y-2">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="block py-2 px-4 rounded transition-colors hover:bg-indigo-700"
          >
            <span data-lang="es">{item.titleEs}</span>
            <span data-lang="en" class="hidden">{item.titleEn}</span>
          </a>
          {item.subitems && (
            <ul class="ml-4 mt-2 space-y-1">
              {item.subitems.map((subitem) => (
                <li>
                  <a
                    href={subitem.href}
                    class="block py-1 px-4 rounded text-sm transition-colors hover:bg-indigo-700"
                  >
                    <span data-lang="es">{subitem.titleEs}</span>
                    <span data-lang="en" class="hidden">{subitem.titleEn}</span>
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </nav>
</aside>
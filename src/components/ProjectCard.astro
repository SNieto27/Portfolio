---
export interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="block">
  <div class="bg-indigo-950 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out">
    <div class="text-blue-50 text-4xl mb-4">{icon}</div>
    <h3 class="text-xl font-semibold text-blue-50 mb-3">{title}</h3>
    <p class="text-blue-100">{description}</p>
  </div>
</a>
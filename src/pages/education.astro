---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { Image } from 'astro:assets';
---
<Layout title="Saul Nieto - IT Enthusiast">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12">
        <Image
          src="/images/saul.jpeg"
          alt="Saul Nieto"
          width={200}
          height={200}
          class="rounded-full border-4 border-orange-500 mx-auto mb-6"
        />
        <h1 class="text-4xl font-bold text-orange-800 mb-2">Saul Nieto</h1>
        <p class="text-xl text-gray-600">IT Enthusiast</p>
      </div>
  
      <div class="space-y-8">
        <section class="bg-white p-6 rounded-lg shadow-md transition-all duration-300 hover:shadow-lg">
          <h2 class="text-2xl font-semibold text-orange-700 mb-4">
            <span data-lang="es">Educación Secundaria</span>
            <span data-lang="en" class="hidden">High School Education</span>
          </h2>
          <p class="text-gray-700 leading-relaxed" data-lang="es">
            [2013-2018], Centro de Investigación en Innovación Educativa (CIIE), Bachillerato Técnico Profesional en Electricidad. 
          </p>
          <p class="text-gray-700 leading-relaxed hidden" data-lang="en">
            [2013-2018], Centro de Investigación en Innovación Educativa (CIIE), Professional Technical Baccalaureate in Electricity.
          </p>
        </section>

        <section class="bg-white p-6 rounded-lg shadow-md transition-all duration-300 hover:shadow-lg">
            <h2 class="text-2xl font-semibold text-orange-700 mb-4">
              <span data-lang="es">Educación de Pregrado</span>
              <span data-lang="en" class="hidden">Undergraduate Education</span>
            </h2>
            <p class="text-gray-700 leading-relaxed" data-lang="es">
              [2021-Actualidad], Universidad Nacional Autónoma de Honduras (UNAH), Facultad de Ingeniería, Ingeniería en Sistemas.
            </p>
            <p class="text-gray-700 leading-relaxed hidden" data-lang="en">
              [2021-Actualidad], Universidad Nacional Autónoma de Honduras (UNAH), Faculty of Engineering, Systems Engineering.
            </p>
          </section>
      </div>
  
